@model Vidly.ViewModel.MoviesViewModel
@{
    ViewBag.Title = "Edit";
}
@if (Model.Movie.ID == 0)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}
<br />

@using (Html.BeginForm("Save", "Movies"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Movie.Name)
    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Movie.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Movie.ReleaseDate)
    @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Movie.ReleaseDate)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Movie.GenreID)
    @Html.DropDownListFor(m => m.Movie.GenreID, new SelectList(Model.Genres, "ID", "Name"), "Select Genre", new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Movie.GenreID)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Movie.NumberInStock)
    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.Movie.NumberInStock)
</div>
    @Html.HiddenFor(m => m.Movie.ID)
    <button class="btn btn-primary">Save</button>
}
@Html.ActionLink("Back to Movies List", "Index")

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}